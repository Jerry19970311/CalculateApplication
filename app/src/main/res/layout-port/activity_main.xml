<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.edu.bistu.cs.se.calculateapplication.MainActivity"
    android:weightSum="1">


        <EditText
            android:saveEnabled="false"
            android:id="@+id/Result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:background="@null"
            android:gravity="bottom|right"
            android:layout_weight="1.03" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="314dp"
        android:layout_margin="10dp"
        android:rowCount="9"
        android:columnCount="4">

        <Button
            android:id="@+id/Cancel"
            android:text="@string/s_button"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/mrButton"
            android:text="MR"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/maddButton"
            android:text="M+"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/mcButton"
            android:text="MC"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/one"
            android:text="@string/one_button"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/two"
            android:text="@string/two_button"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/three"
            android:text="@string/three_button"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/add"
            android:text="@string/add_button"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/four"
            android:text="@string/four_button"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/five"
            android:text="@string/five_button"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/six"
            android:text="@string/six_button"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/minus"
            android:text="@string/minus_button"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/seven"
            android:text="@string/seven_button"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/eight"
            android:text="@string/eight_button"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/nine"
            android:text="@string/nine_button"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/multiply"
            android:text="@string/multiply_button"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/sign"
            android:text="+/-"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/zero"
            android:text="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/point"
            android:text="."
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/divide"
            android:text="/"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/Back"
            android:text="â†’"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"/>

        <Button
            android:id="@+id/getResult"
            android:text="="
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"/>
    </GridLayout>

</LinearLayout>
